void F01_Halt( const char* msg ){ 
    printf( "[F01_Halt]:%s\n", msg ); 
    fflush(stdout); exit(666);
}//[;]//

int F01_Same( const char* str_01, const char* str_02 ){
    return( 0 == strcmp( str_01, str_02 ) );
}//[;]//

